<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#070505"
        app:cardCornerRadius="@dimen/corner"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <!-- Image at the top -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:contentDescription="@string/image"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Optional: Author Name or Subheading -->
            <TextView
                android:id="@+id/subheading"
                style="@style/layoutText"
                android:fontFamily="@font/droid_sans"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:textColor="@color/subHeadingColor"
                android:textSize="@dimen/subHeading"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Quote Content -->
            <TextView
                android:id="@+id/content"
                style="@style/layoutText"
                android:alpha="0.7"
                android:fontFamily="@font/kotta_one"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/contentColor"
                android:textSize="@dimen/content"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/subheading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- More At and Short By (overlapping, one visible at a time) -->
            <FrameLayout
                android:id="@+id/moreShortFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/moreAt"
                    style="@style/layoutText"
                    android:text="@string/moreAt"
                    android:fontFamily="@font/kotta_one"
                    android:textColor="@color/moreShortTextColor"
                    android:textSize="@dimen/moreShort"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/shortBy"
                    style="@style/layoutText"
                    android:text="@string/shortBY"
                    android:textColor="@color/moreShortTextColor"
                    android:textSize="@dimen/moreShort"
                    android:textStyle="normal"
                    android:visibility="invisible" />
            </FrameLayout>

            <!-- Read More -->
            <TextView
                android:id="@+id/read_more"
                style="@style/layoutText"
                android:fontFamily="@font/droid_sans"
                android:textColor="@color/tap"
                android:textSize="@dimen/readMore"
                app:layout_constraintTop_toBottomOf="@id/moreShortFrame"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"/>

            <!-- Footer 1 (hidden by default) -->
            <RelativeLayout
                android:id="@+id/footer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    layout="@layout/footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <!-- Footer 2 (read more) -->
            <RelativeLayout
                android:id="@+id/footer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Add any additional footer2 content here -->
            </RelativeLayout>

            <!-- Refresh and Share Buttons at Top Right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

                <Button
                    android:id="@+id/share_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/share_variant"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/r_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/refresh" />
            </LinearLayout>

            <!-- Header (hidden by default) -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    layout="@layout/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
